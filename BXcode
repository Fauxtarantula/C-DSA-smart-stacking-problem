#include "Header.h"

using namespace std;

void sauce::readFileFun() {

	ifstream inFile;
	inFile.open("list.txt");

	//error check
	if (inFile.fail()) {
		cerr << "Error Opening File" << endl;
		exit(1);
	}
	int count = 0;
	string box;
	vector<int> numvect;
	vector<string> boxvect;

	for (; !inFile.eof(); count++) {
		getline(inFile, box, '\n');
		boxvect.push_back(box);
	}
	for (int n = 0; n < boxvect.size(); n++) {

		string cha = boxvect[n].substr(11);
		int m = stoi(cha);
		numvect.push_back(m);
		cout << numvect[n] << endl;
	}
}

